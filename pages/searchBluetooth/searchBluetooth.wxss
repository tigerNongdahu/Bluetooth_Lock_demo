/* pages/searchBluetooth/searchBluetooth.wxss */

.container{
  margin: 0;
  padding: 0;
}

.section_one{
  width: 100%;
  background: #0E63FE
}

.section_one .searchView {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  width: 100%;
  text-align: center;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}

.section_one .searchView .blueImageView{
  width: 50rpx;
  height: 80rpx;
}

.section_one .searchView .statuBtn{
  height: 100%;
  background: #0E63FE;
}


.section_one .searchView .statuBtn button{
  border: none;
  border-radius: 0;
  height: 100%;
  color: white;
  text-align: left;
  background: #0E63FE;
  font-size: 34rpx;
}

.section_one .notiView{
  margin-top: 20rpx;
  font-size: 26rpx;
  text-align: center;
  color: gainsboro;
  height: 80rpx;
  line-height: 1.2;
}

button::after {
    border-radius: 0;
    border: none;
}

/* 导航对应内容项 */
.nav_section{
    width:100%;
}
.nav_section_items{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    padding:30rpx;
    border-bottom:2rpx solid #ddd;
    position: relative;
    align-items: center;
}
.nav_section_items:active{
    background:#ddd;
}
.nav_section_items .section_image{
    width:70rpx;
    height:90rpx;
}

.nav_section_items .section_book{
   width:120rpx;
   height:60rpx;
}

.nav_section_items .section_book button{
   width:100%;
   height:100%;
   margin-top: 20rpx;
   font-size: 26rpx;
   border: none;
}

.nav_section_items .section_image image{
    width:100%;
    height:100%;
}
.nav_section_items .section_cont{
    width:480rpx;
    font-size:26rpx;
    color:#a9a9a9;
}
.nav_section_items .section_cont view{
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    display: block;
}
.nav_section_items .section_cont .section_cont_intro{
    white-space:normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nav_section_items .section_cont .section_cont_sub{
    font-size: 34rpx;
    line-height:1.2;
    color:#000;
    margin-bottom:10rpx;
}

 .title{
  background: #f4f4f4;
  height: 80rpx;
  width: 100%;
  border-bottom:2rpx solid #ddd;
}

 .title view{
  font-size: 30rpx;
  padding-top: 20rpx;
  margin-left: 20rpx;
  color: gray;
}

.RSSIView{
  font-size: 26rpx;
  height: 30rpx;
  width: 120rpx;

}


/*以下是自定义弹框*/
.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 70rpx;  
  top: 10rpx;
  position: fixed;  
  z-index: 99999;
  align-items: center;
  justify-content: center;
}  
.toast_content {  
  width: 100%;  
  padding: 20rpx;
  background: rgb(133, 132, 132);   
  height: 100%; 
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;
  text-align: center;
  align-items: center;
  vertical-align: center;
  display: flex;
  justify-content: center;
} 